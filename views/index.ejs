<%- include('partials/header', { title: 'Home', currentPage: 'home' }) %>

<!-- Hero Section -->
<section class="pt-16 min-h-screen flex items-center bg-gradient-to-br from-sage-50 to-stone-warm-100">
    <div class="container">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <div class="space-y-8 animate-fade-in">
                <h1 class="text-5xl lg:text-7xl font-serif font-light text-stone-warm-900 leading-tight">
                    Where Art
                    <span class="block text-sage-600 font-medium">Meets Soul</span>
                </h1>
                <p class="text-xl text-stone-warm-600 leading-relaxed max-w-md">
                    Creating timeless pieces that capture emotion, tell stories, and transform spaces through the power of artistic expression.
                </p>
                <div class="flex flex-col sm:flex-row gap-4">
                    <a href="/portfolio" class="btn-primary text-center">
                        Explore Portfolio
                    </a>
                    <a href="/contact" class="btn-secondary text-center">
                        Commission Art
                    </a>
                </div>
            </div>
            
            <div class="relative animate-slide-up">
                <div class="aspect-square rounded-2xl overflow-hidden shadow-2xl">
                    <img src="https://images.unsplash.com/photo-1578662996442-48f60103fc96?w=600&h=600&fit=crop" 
                         alt="Featured Artwork" 
                         class="w-full h-full object-cover hover:scale-105 transition-transform duration-700">
                </div>
                <div class="absolute -bottom-4 -right-4 w-24 h-24 bg-sage-600 rounded-full opacity-20 animate-float"></div>
                <div class="absolute -top-4 -left-4 w-16 h-16 bg-muted-blue-400 rounded-full opacity-30 animate-float" style="animation-delay: 1s;"></div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Works Section -->
<section class="section-padding bg-white">
    <div class="container">
        <div class="text-center mb-16">
            <h2 class="text-4xl lg:text-5xl font-serif font-light text-stone-warm-900 mb-4">
                Featured Works
            </h2>
            <p class="text-xl text-stone-warm-600 max-w-2xl mx-auto">
                A curated selection of recent creations showcasing diverse techniques and artistic exploration.
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <% artworks.forEach((artwork, index) => { %>
            <div class="artwork-card" style="animation-delay: <%= index * 100 %>ms;">
                <div class="aspect-square overflow-hidden">
                    <img src="<%= artwork.image %>" 
                         alt="<%= artwork.title %>" 
                         class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700">
                </div>
                <div class="p-6">
                    <h3 class="text-xl font-serif font-medium text-stone-warm-900 mb-2">
                        <%= artwork.title %>
                    </h3>
                    <p class="text-stone-warm-600 text-sm mb-3">
                        <%= artwork.medium %>, <%= artwork.year %>
                    </p>
                    <p class="text-stone-warm-500 text-sm leading-relaxed">
                        <%= artwork.description %>
                    </p>
                </div>
            </div>
            <% }); %>
        </div>
        
        <div class="text-center mt-12">
            <a href="/portfolio" class="btn-secondary">
                View All Works
            </a>
        </div>
    </div>
</section>

<!-- About Preview Section -->
<section class="section-padding bg-gradient-to-r from-sage-50 to-muted-blue-50">
    <div class="container">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
            <div class="space-y-6">
                <h2 class="text-4xl lg:text-5xl font-serif font-light text-stone-warm-900">
                    The Artist
                </h2>
                <p class="text-lg text-stone-warm-600 leading-relaxed">
                    With over a decade of experience exploring various artistic mediums, I believe art is a universal language that transcends boundaries and connects souls.
                </p>
                <p class="text-lg text-stone-warm-600 leading-relaxed">
                    My work draws inspiration from nature, human emotion, and the delicate balance between tradition and innovation.
                </p>
                <a href="/about" class="inline-flex items-center text-sage-600 hover:text-sage-700 font-medium group">
                    Learn More About Me
                    <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                </a>
            </div>
            
            <div class="relative">
                <div class="aspect-[4/5] rounded-2xl overflow-hidden shadow-xl">
                    <img src="https://images.unsplash.com/photo-1513475382585-d06e58bcb0e0?w=500&h=600&fit=crop" 
                         alt="Artist at work" 
                         class="w-full h-full object-cover">
                </div>
                <div class="absolute inset-0 bg-gradient-to-t from-stone-warm-900/20 to-transparent rounded-2xl"></div>
            </div>
        </div>
    </div>
</section>

<!-- Services Preview Section -->
<section class="section-padding bg-white">
    <div class="container">
        <div class="text-center mb-16">
            <h2 class="text-4xl lg:text-5xl font-serif font-light text-stone-warm-900 mb-4">
                Services
            </h2>
            <p class="text-xl text-stone-warm-600 max-w-2xl mx-auto">
                Bringing your artistic vision to life through personalized commissions and creative services.
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <% services.forEach((service, index) => { %>
            <div class="card p-8 text-center group hover:shadow-lg transition-all duration-300" style="animation-delay: <%= index * 150 %>ms;">
                <div class="w-16 h-16 bg-sage-100 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-sage-200 transition-colors">
                    <svg class="w-8 h-8 text-sage-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a4 4 0 004-4V5z"></path>
                    </svg>
                </div>
                <h3 class="text-2xl font-serif font-medium text-stone-warm-900 mb-4">
                    <%= service.title %>
                </h3>
                <p class="text-stone-warm-600 mb-6 leading-relaxed">
                    <%= service.description %>
                </p>
                <p class="text-2xl font-semibold text-sage-600">
                    <%= service.price %>
                </p>
            </div>
            <% }); %>
        </div>
        
        <div class="text-center mt-12">
            <a href="/services" class="btn-primary">
                View All Services
            </a>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="section-padding bg-stone-warm-900 text-white">
    <div class="container text-center">
        <h2 class="text-4xl lg:text-5xl font-serif font-light mb-6">
            Ready to Create Something Beautiful?
        </h2>
        <p class="text-xl text-stone-warm-300 mb-8 max-w-2xl mx-auto">
            Let's collaborate to bring your artistic vision to life. Whether it's a custom commission or a creative project, I'm here to help.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="bg-sage-600 hover:bg-sage-700 text-white font-medium py-4 px-8 rounded-lg transition-all duration-300 hover:shadow-lg hover:-translate-y-0.5">
                Start a Project
            </a>
            <a href="/portfolio" class="border-2 border-stone-warm-600 text-stone-warm-300 hover:bg-stone-warm-800 hover:border-stone-warm-500 font-medium py-4 px-8 rounded-lg transition-all duration-300">
                View Portfolio
            </a>
        </div>
    </div>
</section>

<%- include('partials/footer') %>