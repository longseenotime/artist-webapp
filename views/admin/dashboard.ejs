<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Artist Studio</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="min-h-screen bg-stone-warm-50">
    <!-- Navigation -->
    <nav class="bg-white border-b border-stone-warm-100">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center space-x-2">
                    <div class="w-8 h-8 bg-sage-600 rounded-lg flex items-center justify-center">
                        <span class="text-white font-bold text-sm">A</span>
                    </div>
                    <span class="font-serif font-semibold text-xl text-stone-warm-900">Admin Dashboard</span>
                </div>
                
                <div class="flex items-center space-x-4">
                    <span class="text-stone-warm-600">Welcome, <%= username %></span>
                    <a href="/" class="text-sage-600 hover:text-sage-700 transition-colors">View Site</a>
                    <a href="/admin/logout" class="text-stone-warm-600 hover:text-stone-warm-700 transition-colors">Logout</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Header -->
        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-3xl font-serif font-medium text-stone-warm-900">Paintings Management</h1>
                <p class="text-stone-warm-600 mt-2">Add, edit, and manage your artwork collection</p>
            </div>
            <a href="/admin/paintings/new" class="btn-primary">
                Add New Painting
            </a>
        </div>

        <!-- Success Message -->
        <% if (typeof success !== 'undefined') { %>
        <div class="mb-6 p-4 bg-sage-50 border border-sage-200 rounded-lg">
            <p class="text-sage-800">
                <% if (success === 'added') { %>
                    Painting added successfully!
                <% } else if (success === 'updated') { %>
                    Painting updated successfully!
                <% } else if (success === 'deleted') { %>
                    Painting deleted successfully!
                <% } %>
            </p>
        </div>
        <% } %>

        <!-- Paintings Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% paintings.forEach(painting => { %>
            <div class="bg-white rounded-xl shadow-sm border border-stone-warm-100 overflow-hidden">
                <div class="aspect-square bg-stone-warm-100">
                    <img src="<%= painting.image_url %>" 
                         alt="<%= painting.title %>" 
                         class="w-full h-full object-cover">
                </div>
                
                <div class="p-6">
                    <div class="flex items-start justify-between mb-3">
                        <h3 class="text-xl font-serif font-medium text-stone-warm-900">
                            <%= painting.title %>
                        </h3>
                        <% if (painting.featured) { %>
                        <span class="bg-sage-100 text-sage-800 text-xs px-2 py-1 rounded-full">Featured</span>
                        <% } %>
                    </div>
                    
                    <p class="text-stone-warm-600 text-sm mb-3">
                        <%= painting.medium %>, <%= painting.year %>
                    </p>
                    
                    <p class="text-stone-warm-500 text-sm mb-4 line-clamp-2">
                        <%= painting.description %>
                    </p>
                    
                    <div class="flex items-center justify-between mb-4">
                        <span class="text-lg font-semibold text-sage-600">
                            $<%= painting.price %>
                        </span>
                        <span class="text-sm px-2 py-1 rounded-full <%= painting.availability === 'available' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                            <%= painting.availability %>
                        </span>
                    </div>
                    
                    <div class="flex space-x-3">
                        <a href="/admin/paintings/<%= painting.id %>/edit" 
                           class="flex-1 text-center btn-secondary text-sm py-2">
                            Edit
                        </a>
                        <button onclick="deletePainting(<%= painting.id %>)" 
                                class="flex-1 bg-red-600 hover:bg-red-700 text-white text-sm py-2 px-4 rounded-lg transition-colors">
                            Delete
                        </button>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>

        <% if (paintings.length === 0) { %>
        <div class="text-center py-16">
            <div class="w-24 h-24 bg-stone-warm-100 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-12 h-12 text-stone-warm-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
            </div>
            <h3 class="text-2xl font-serif text-stone-warm-900 mb-4">No paintings yet</h3>
            <p class="text-stone-warm-600 mb-6">Start building your collection by adding your first painting.</p>
            <a href="/admin/paintings/new" class="btn-primary">Add Your First Painting</a>
        </div>
        <% } %>
    </div>

    <script>
        // Delete painting function
        async function deletePainting(id) {
            if (confirm('Are you sure you want to delete this painting? This action cannot be undone.')) {
                try {
                    const response = await fetch(`/admin/paintings/${id}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json',
                        }
                    });
                    
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('Error deleting painting');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Error deleting painting');
                }
            }
        }

        // Check for success parameter in URL
        const urlParams = new URLSearchParams(window.location.search);
        const success = urlParams.get('success');
        if (success) {
            // Remove the parameter from URL without reloading
            window.history.replaceState({}, document.title, window.location.pathname);
        }
    </script>
</body>
</html>